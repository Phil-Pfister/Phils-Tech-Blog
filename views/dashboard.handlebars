  <div>
    <h3>Welcome</h3>
  </div>
  <div>
  {{#if userPosts.length}}
  
  <div class="col-md-8 menu-container post-list">
    <h3>Current Posts:</h3>

    {{#each userPosts}}
    <div class="col-md-12 card">
      <div class="card-body">
        <h4><a href="/post/{{id}}">{{title}}</a></h4>
        <br>
      </div>
      
      <div>
        <p>{{post_content}}</p>
      </div>
      
      <div>
        <button class="btn btn-sm btn-danger" data-id="{{id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
  <div class="add-post-container">
      <h3>Add a New Post:</h3>
<form class="new-post-form" id="new-post">
    <div class="form-group">
        <label for="post-title">Topic</label>
        <input class="form-input" type="text" id="post-title" name="post-title">
    </div>
        <div class="form-group">
        <label for="post-content">Content</label>
        <textarea class="form-input" name="post-content" id="post-content"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>


</form>

  </div>


  </div>

  <script src="./js/add-post.js"></script>